                          span.dropdown_arrow

                  .price_category
                    .price_col_caption
                      .fl
                        span.price_step_index 2
                        span Выбирайте работы которые необходимо выполнить

                    .price_col_box._price_stack.mCSB
                      .price_box_caption.collapseBtn._opened Стены
                      .expandBlock.price_box_expand(style='display:block;')
                        .price_row
                          .fl
                            .task_name Поклейка обоев
                          .fr
                            +task_add('shpalery')

                        .price_row
                          .fl
                            .task_name Покраска стен
                          .fr
                            +task_add('walls')

                        .price_row
                          .fl
                            .task_name Укладка плитки
                          .fr
                            +task_add('tiles')

                      .price_box_caption.collapseBtn Потолок
                      .expandBlock.price_box_expand
                        .price_row
                          .fl
                            .task_name Покраска потолка
                          .fr
                            +task_add('ceil_painting')

                        .price_row
                          .fl
                            .task_name Монтаж реечного потолка
                          .fr
                            +task_add('rake_ceil_installing')

                        .price_row
                          .fl
                            .task_name Монтаж натяжного потолка
                          .fr
                            +task_add('stretch_ceil_installing')

                      .price_box_caption.collapseBtn Пол
                      .expandBlock.price_box_expand
                        .price_row
                          .fl
                            .task_name Настил линолеума
                          .fr
                            +task_add('linoleum_flooring')

                        .price_row
                          .fl
                            .task_name Настил ламината
                          .fr
