                          .fr
                            +task_add('laying_tiles')

                        .price_row
                          .fl
                            .task_name Монтаж теплого пола
                          .fr
                            +task_add('warm_floor')

                .price_col
                  ul#price_switcher.price_col_tabs
                    li: a.tab_link(href='#price_tab_1'): span смета работ
                    li: a.tab_link(href='#price_tab_2'): span смета материалов

                  .tab_panels.tabBlock(data-tab-context='#price_switcher')
                    #price_tab_1.tab_panel.show_example
                      .tab_content
                        .tab_content_overview.contentOverview
                          .gl_table
                            .gl_table_cell
                              p Выберите работы <br>из 
                                span.c_blue левого списка 
                                | <br> чтобы увидеть смету
                        .price_col_box.mCSB
                          #estimations
                          #estimations_example.estimations_example
                            .task_estimation
                              .price_row
                                .fl
                                  .task_name Поклейка обоев
                                .fr
                                  +task_rm()

                              .task_estimate_block
                                .task_estimate_date
                                  span.task_step 1 этап ремонта
                                  span.task_period 22.06.2017 - 25.06.2017

                                dl.task_estimate_list
                                  dt Демонтаж старых обоев
                                  dd 2 500 руб

                                  dt Грунтовка обоев
                                  dd 2 500 руб

                                  dt Демонтаж старых обоев
                                  dd 2 500 руб

                                  dt.estimate_total Сумма
