                                  dd 2 500 руб

                                  dt Демонтаж старых обоев
                                  dd 2 500 руб

                                  dt.estimate_total Сумма
                                  dd.estimate_total 7 500 руб

                            .task_estimation
                              .price_row
                                .fl
                                  .task_name Укладка плитки
                                .fr
                                  +task_rm()

                              .task_estimate_block
                                .task_estimate_date
                                  span.task_step 1 этап ремонта
                                  span.task_period 22.06.2017 - 25.06.2017

                                dl.task_estimate_list
                                  dt Демонтаж старых обоев
                                  dd 2 500 руб

                                  dt Грунтовка обоев
                                  dd 2 500 руб

                                  dt Демонтаж старых обоев
                                  dd 2 500 руб

                                  dt.estimate_total Сумма
                                  dd.estimate_total 7 500 руб

                    #price_tab_2.tab_panel
                      .tab_content
                        .price_col_box.mCSB
                          #materials
