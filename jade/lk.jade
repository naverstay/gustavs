include mixins.pug
doctype html
html(lang='ru')
  +dev_head('Gustavs кабинет')

  body
    .wrapper
      .gl_overlay.glOverlay
      .base
        +header(false, true)

        .main_content
          #price_section.lk_section.priceSection._checkout
            form.section_inner.validateMe.checkoutForm(action='#')
              ul#price_switcher.price_col_tabs
