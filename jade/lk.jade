                li: a.tab_link(href='#price_tab_2'): span смета работ и материалов

              .tab_panels.tabBlock(data-tab-context='#price_switcher')
                #price_tab_1.tab_panel
                  .tab_content.clearfix
                    .price_col._schedule
                      .price_col_box
                        #estimations
                          .task_estimation._active()
                            .price_row
                              .fl
                                .task_name Поклейка обоев
                              .fr
                                .task_volume
                                  span
                                    | 20 
                                    span
                                  span м
                                  sup 2
                                  
                            .checkout_col_box
                              dl.task_estimate_list._payment
                                dt Первый платеж
                                dd 2 500 руб
                                    
                              .payment_row
                                .fr 
                                  span.payment_label Статус платежа: 
                                  a.btn_blue_2.btn_v1.checkout_btn(href='#')
                                    span.i-check
